{
  "manifest_version": 2,

  "name": "envatotab",
  "description": "Helps you to be up to date with the most important activities on Envato marketplaces.",
  "version": "1.0",
  "options_page": "options.html",

  "permissions": [
    "http://*/*",
    "https://*/*",
    "background",
    "tabs",
    "notifications",
    "storage",
    "managment"    
  ],

  "chrome_url_overrides" : {
    "newtab": "newtab.html"
  },

  "content_scripts": [
  {
      "matches": ["http://*/*","https://*/*"],
      "js": ["less.js","assets/js/jquery-1.11.1.min.js","assets/js/bootstrap.min.js","assets/js/jquery-migrate-1.2.1.min.js","newtab.js","library.js"],
      "css": ["assets/css/bootstrap.min.css", "assets/css/font-awesome.min.css"]
  }],

  "browser_action": {
    "default_icon": {
      "19": "assets/img/icon19.png",
      "38": "assets/img/icon38.png"
    },
    "default_title": "envatotab",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  }

}